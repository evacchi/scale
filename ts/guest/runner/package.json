{
  "name": "@loopholelabs/scale-ts",
  "version": "0.1.0",
  "description": "TypeScript version of the scale functions.",
  "browserslist": "> 0.5%, last 2 versions, not dead",
  "default": "dist/browser.html",
  "module": "dist/module.js",
  "targets": {
    "default": {
      "source": "src/web/index.html",
      "context": "browser",
      "isLibrary": false,
      "optimize": true,
      "includeNodeModules": true
    },
    "module": {
      "source": "src/index.ts"
    }
  },
  "scripts": {
    "build": "parcel build --log-level verbose",
    "start": "parcel",
    "test": "node --experimental-wasi-unstable-preview1 --trace-warnings node_modules/.bin/jest --no-cache"
  },
  "dependencies": {
    "text-encoding": "^0.7.0"
  },
  "devDependencies": {
    "@parcel/packager-ts": "^2.7.0",
    "@parcel/transformer-typescript-types": "^2.7.0",
    "@parcel/validator-typescript": "^2.7.0",
    "ts-jest": "^29.0.3",
    "@types/jest": "^29.2.0",
    "jest": "^29.2.2",
    "jest-environment-jsdom": "^29.2.2",
    "parcel": "^2.7.0",
    "supertest": "^6.3.1",
    "@types/express": "^4.17.14",
    "@types/node": "^18.11.5",
    "@types/supertest": "^2.0.12",
    "@types/text-encoding": "^0.0.36",
    "buffer": "^6.0.3",
    "crypto-browserify": "^3.12.0",
    "events": "^3.3.0",
    "parcel-reporter-static-files-copy": "^1.4.0",
    "process": "^0.11.10",
    "stream-browserify": "^3.0.0",
    "tty-browserify": "^0.0.1",
    "typescript": "^4.7.0"
  }
}
